import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int L=sc.nextInt();
        int B=sc.nextInt();
        int H=sc.nextInt();
        int Total=(2*(L*B+B*H+H*L));
        int Volume=L*B*H;
        System.out.print(Total+" "+Volume);
    }
}
